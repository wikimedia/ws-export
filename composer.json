{
	"name": "wsexport/tool",
	"description": "Tool to extract Wikisource books",
	"keywords": [
		"wikisource"
	],
	"homepage": "https://github.com/wsexport/tool",
	"license": "GPL-2.0-or-later",
	"authors": [],
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\Tests\\": "tests/"
		}
	},
	"require": {
		"php": ">=7.2.5",
		"ext-ctype": "*",
		"ext-dom": "*",
		"ext-iconv": "*",
		"ext-intl": "*",
		"ext-json": "*",
		"ext-libxml": "*",
		"ext-mbstring": "*",
		"ext-pdo": "*",
		"ext-sqlite3": "*",
		"ext-zip": "*",
		"composer/package-versions-deprecated": "^1.11",
		"doctrine/annotations": "^1.10",
		"doctrine/doctrine-bundle": "^2.4",
		"doctrine/doctrine-migrations-bundle": "^3.1",
		"doctrine/orm": "^2.8",
		"guzzlehttp/guzzle": "^7.0",
		"kevinrob/guzzle-cache-middleware": "^4.0",
		"symfony/dotenv": "5.4.*",
		"symfony/framework-bundle": "5.4.*",
		"symfony/mailer": "5.4.*",
		"symfony/monolog-bundle": "^3.6",
		"symfony/process": "5.4.*",
		"symfony/stopwatch": "5.4.*",
		"symfony/yaml": "5.4.*",
		"twig/extra-bundle": "^2.12 || ^3.0",
		"twig/twig": "^2.12 || ^3.0",
		"wikimedia/html-formatter": "^1.0",
		"wikimedia/toolforge-bundle": "^1.3"
	},
	"require-dev": {
		"dama/doctrine-test-bundle": "^6.5",
		"mediawiki/mediawiki-codesniffer": "^v34.0",
		"mediawiki/minus-x": "^1.0",
		"phan/phan": "5.2.1",
		"samwilson/console-readme-generator": "^0.3",
		"symfony/browser-kit": "5.4.*",
		"symfony/css-selector": "5.4.*",
		"symfony/maker-bundle": "^1.25",
		"symfony/phpunit-bridge": "5.4.*",
		"symfony/web-profiler-bundle": "5.4.*"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": {
			"*": "dist"
		},
		"platform": {
			"php": "7.3"
		},
		"sort-packages": true,
		"allow-plugins": {
			"symfony/flex": true
		}
	},
	"replace": {
		"paragonie/random_compat": "2.*",
		"symfony/polyfill-ctype": "*",
		"symfony/polyfill-iconv": "*",
		"symfony/polyfill-php72": "*",
		"symfony/polyfill-php71": "*",
		"symfony/polyfill-php70": "*",
		"symfony/polyfill-php56": "*"
	},
	"scripts": {
		"post-install-cmd": [
			"./bin/console cache:clear"
		],
		"post-update-cmd": [
			"./bin/console cache:clear"
		],
		"test": [
			"composer validate",
			"phpcs -s .",
			"./bin/console lint:twig ./templates",
			"./bin/console lint:yaml ./config",
			"minus-x check .",
			"./bin/console generate-readme --include='app:' --usage='CLI Usage'",
			"@phan"
		],
		"phan": [
			"phan --allow-polyfill-parser --long-progress-bar --color"
		],
		"fix": [
			"phpcbf"
		]
	},
	"conflict": {
		"symfony/symfony": "*"
	},
	"extra": {
		"symfony": {
			"allow-contrib": false,
			"require": "5.4.*"
		}
	}
}
