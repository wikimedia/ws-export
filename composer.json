{
	"name": "wsexport/tool",
	"description": "Tool to extract Wikisource books",
	"keywords": [
		"wikisource"
	],
	"homepage": "https://github.com/wsexport/tool",
	"license": "GPL-2.0-or-later",
	"authors": [],
	"autoload": {
		"psr-4": {
			"App\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\Tests\\": "tests/"
		}
	},
	"require": {
		"php": ">=8.2",
		"ext-ctype": "*",
		"ext-dom": "*",
		"ext-iconv": "*",
		"ext-intl": "*",
		"ext-json": "*",
		"ext-libxml": "*",
		"ext-mbstring": "*",
		"ext-pdo": "*",
		"ext-sqlite3": "*",
		"ext-zip": "*",
		"composer/package-versions-deprecated": "^1.11",
		"doctrine/annotations": "^2.0",
		"doctrine/doctrine-bundle": "^2.4",
		"doctrine/doctrine-migrations-bundle": "^3.1",
		"doctrine/orm": "^3.3",
		"guzzlehttp/guzzle": "^7.0",
		"kevinrob/guzzle-cache-middleware": "^6.0",
		"league/flysystem-aws-s3-v3": "*",
		"league/flysystem-bundle": "^3.4",
		"symfony/dotenv": "7.2.*",
		"symfony/framework-bundle": "7.2.*",
		"symfony/mailer": "7.2.*",
		"symfony/monolog-bundle": "^3.6",
		"symfony/process": "7.2.*",
		"symfony/stopwatch": "7.2.*",
		"symfony/yaml": "7.2.*",
		"twig/extra-bundle": "^2.12 || ^3.0",
		"twig/twig": "^2.12 || ^3.0",
		"wikimedia/html-formatter": "^4",
		"wikimedia/toolforge-bundle": "^1.3"
	},
	"require-dev": {
		"dama/doctrine-test-bundle": "^8.2",
		"mediawiki/mediawiki-codesniffer": "^v46",
		"mediawiki/minus-x": "^1.0",
		"phan/phan": "^5.2",
		"samwilson/console-readme-generator": "^0.3",
		"symfony/browser-kit": "7.2.*",
		"symfony/css-selector": "7.2.*",
		"symfony/phpunit-bridge": "7.2.*",
		"symfony/web-profiler-bundle": "7.2.*"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": {
			"*": "dist"
		},
		"platform": {
			"php": "8.2"
		},
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"replace": {
		"paragonie/random_compat": "2.*",
		"symfony/polyfill-ctype": "*",
		"symfony/polyfill-iconv": "*",
		"symfony/polyfill-php72": "*",
		"symfony/polyfill-php71": "*",
		"symfony/polyfill-php70": "*",
		"symfony/polyfill-php56": "*"
	},
	"scripts": {
		"post-install-cmd": [
			"@php ./bin/console cache:clear"
		],
		"post-update-cmd": [
			"@php ./bin/console cache:clear"
		],
		"test": [
			"composer validate",
			"phpcs -s .",
			"cat bin/console | ./vendor/bin/phpcs",
			"@php ./bin/console lint:twig ./templates",
			"@php ./bin/console lint:yaml ./config",
			"minus-x check .",
			"@php ./bin/console generate-readme --include='app:' --usage='CLI Usage'",
			"@phan"
		],
		"phan": [
			"phan --allow-polyfill-parser --long-progress-bar --color"
		],
		"fix": [
			"phpcbf"
		]
	},
	"conflict": {
		"symfony/symfony": "*"
	},
	"extra": {
		"symfony": {
			"allow-contrib": false,
			"require": "7.2.*"
		}
	}
}
